<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchPar"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/layout1">

        <EditText
            style="@style/textField"
            android:id="@+id/user_name"
            android:hint="@string/user_name"/>

        <TextView
            style="@style/heading"
            android:id="@+id/toppings_label"
            android:text="@string/toppings_header" />

        <CheckBox
            style="@style/checkBox"
            android:id="@+id/has_whipped_cream"
            android:text="@string/whipped_cream" />

        <CheckBox
            style="@style/checkBox"
            android:id="@+id/has_chocolate"
            android:text="@string/chocolate"/>

        <TextView
            style="@style/heading"
            android:id="@+id/quantity_label"
            android:text="@string/quantity_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/button"
                android:onClick="decrement"
                android:text="@string/decrement" />

            <TextView
                style="@style/quantity"
                android:id="@+id/quantity_text_view"
                android:text="@string/quantity"/>

            <Button
                style="@style/button"
                android:onClick="increment"
                android:text="@string/increment" />

        </LinearLayout>

        <Button
            style="@style/buttonSubmit"
            android:id="@+id/order_btn"
            android:onClick="submitOrder"
            android:text="@string/order_button" />

    </LinearLayout>

    <ImageView
        style="@style/bottomImg"
        android:src="@drawable/coffee_bottom"
        android:contentDescription="@string/coffee_image"/>

</RelativeLayout>


